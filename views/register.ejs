<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>


</head>
<%- include('../views/partials/navbar.ejs') %>

  <body class="login-body">
    <div class="container d-flex justify-content-center align-items-center mt-5 mb-5">
      <div class="row">
        <div class="col-md-6 offset-md-3 col-xl-6 offset-xl-3">
          <div class="card shadow">
            <div class="card-body">
              <h5 class="card-title">Register</h5>
              <form action="/users/register" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                  <label class="form-label" for="username">Username</label>
                  <input class="form-control" type="text" id="username" name="username" autofocus required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="mb-3">
                  <label class="form-label" for="email">Email</label>
                  <input class="form-control" type="text" id="email" name="email" autofocus required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <div class="mb-3">
                  <label for="floatingInput">Email</label>
                  <input type="email" class="form-control" id="email" name="email" required>
                  <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                  <label class="form-label" for="password">Password</label>
                  <input class="form-control" type="password" id="password" name="password" required>
                  <div class="valid-feedback">
                    Looks good!
                  </div>
                </div>
                <button class="btn btn-success btn-block">Register</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

  </body>

</html>