  <link rel="stylesheet" href="/styles/index.css">

</head>

<body>
  <%- include('../../views/partials/navbar.ejs') %>
<section class="quizzes">

  <%for (let trivia of trivias) {%>
    
    <div class="quiz-card">
      <div class="title-img">
        
        <div class="triviaimg-div">
          <img class="triv-img" src=<%=trivia.image %> alt="">
        </div>
      </div>
      
      <div class="description">
        <a href="/trivia/<%=trivia._id%>/">
          <h1 class="title-text"><%=trivia.title.toUpperCase() %></h1>
        </a>
        <%=trivia.description %>
        <div class="index-btns">

            <a class="btn" href="/trivia/<%=trivia._id%>/">
              TRY QUIZ
            </a>
          </div>
        </div>
      </div>
      <% } %>
    </section>
      
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
          crossorigin="anonymous"></script>

</body>

</html>